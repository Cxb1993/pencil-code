#!/bin/csh

# An obscure script used by no-one else than Axel Brandenburg. It won't work
# for you, since you don't have his `mktmp'. So just ignore it

set CWD=$cwd
mkdir $2
cd $2
#
$HOME/bin/mktmp
mkdir src
cd src
#
#  use previous src directory
#
cp ../../$1/src/*.local .
cd ..
$PENCIL_HOME/bin/setup-src
#
#  copy some files into new directory
#
cd ../$1
cp *.in k.dat ../$2
#

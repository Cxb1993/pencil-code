!                           -*-f90-*-     (for Emacs)
!
!  Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.23 2006-09-22 00:17:57 wlyra Exp $',
  ip=6,                        ! debugging parameter
  xyz0  = -2.6,-2.6,-0.26,       ! first corner of box
  xyz1  =  2.6, 2.6, 0.26,       ! second corner of box
  lperi = T  , T  , T,         ! periodic direction?
  !lshift_origin =  F,  F,  F,

  !bcx = 's','s','a','s'!,'s','s','a','s'
  !      velgas, densgas, veldust,densdust
  !bcy = 's','s','a','s'!,'s','s','a','s'

  r_int=0.4,                   ! radius of interior spherical boundary
  r_ext=2.5,                   ! radius of exterior spherical boundary
  lcylindrical=T
  llocal_iso=T
/
&eos_init_pars
  cs0=0.05 
  rho0 = 1.
/
&hydro_init_pars
  inituu='keplerian'
/
&density_init_pars
  initlnrho='zero' 
  lnrho_const=0.  
  ldensity_nolog=T
/
&particles_init_pars
  initxxp='random', initvvp='random'
/
&particles_nbody_init_pars
  initxxsp='fixed-cm'
  initvvsp='fixed-cm'
  pmass=1e-4, 1.
  position=-1., 0.
  r_smooth=0.03,0.1
  lcylindrical_gravity=F,T
/


#
#  this should be sourced each time you log in;
#  alternatively, put this into your .cshrc
#  Wolfgang, could this be made shell-independent?
#
set path=(../bin ../../bin ../../../bin $HOME/bin $path)
setenv IDL_PATH "../idl:../../idl:../../../idl:+~/idl:+/usr/local/rsi/idl"
set cdpath = ( ../  ../../ ../../../ ~/ )
alias local 'cp -p \!:1 tmp.$$; \rm \!:1; mv tmp.$$ \!:1; chmod u+w \!:1'

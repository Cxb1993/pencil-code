!                           -*-f90-*-     (for Emacs)
!
!  Run parameters!
!
&run_pars
  cvsid='$Id: run.in,v 1.37 2007-07-23 17:12:42 wlyra Exp $',
  ip=14,
  nt=50, it1=5, isave=100, itorder=3, ialive=1
  cdt=0.4, 
  cdtv=0.4, 
  dtmin=1e-6,
  dsnap=6.283185, dvid=6.283185, d2davg=10. 
  !ttransient=0.,
  !tavg = 10.,                   ! time constant for time averaging
  !random_gen='nr_f90',
  !slice_position='e'
  wfreeze_int = 0.
  wfreeze_ext = 0.
  wborder_int=0.05
  wborder_ext=0.2
  lbidiagonal_derij=F  !(use the slightly more accurate formulation for derij)
!  lrtime_phiavg=T
/
&eos_run_pars
/
&hydro_run_pars
  wdamp=0. 
  lfreeze_uint=T,lfreeze_uext=T
  borderuu='global-shear'
/
&density_run_pars
  lupw_rho=T ! use upwinding for rho to avoid wiggles
             ! upwinding violates mass conservation!
  lfreeze_lnrhoint=T
  lfreeze_lnrhoext=T
! diffrho_hyper3=5E-12, idiff='hyper3'
  borderlnrho='constant'
/
&viscosity_run_pars
  ivisc='nu-const','nu-shock'
  nu=1e-5,nu_shock=1.0
  !ivisc='hyper3_rho_nu-const','nu-shock'
  !nu_hyper3=5e-12,nu_shock=1.0
/
&special_run_pars
/
&particles_run_pars
  ldragforce_dust_par=F
/
&particles_nbody_run_pars
  lnogravz_star=T
  lfollow_particle=T,T
/
&shock_run_pars
  lshock_first=T
  lshock_max5=T
/

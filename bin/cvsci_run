#!/bin/csh
#$Id: cvsci_run,v 1.1 2002-08-15 18:51:01 brandenb Exp $
#
#  This script adds a new run to the repository
#  and checks in all *.in files as well as material
#  from the tmp and src directories.

cvs add $1
cd $1
set CWD=$cwd
cvs add tmp src *.in
cd src
cvs add *.local
cd ..
cd tmp
cvs add n.dat index.pro
cd $CWD
cvs ci -m "added new run"

echo OK

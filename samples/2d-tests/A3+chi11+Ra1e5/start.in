!                              -*-f90-*-     (for emacs)
!
! Convection in vertically stratified atmosphere
! Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.1 2003-11-09 20:30:13 brandenb Exp $',
  ip=15,			! debugging parameter
  xyz0  = -1.5, -1.5, -1.10,	! first corner of box
  xyz1  =  1.5,  1.5, -0.10,	! second corner of box
  lperi = T , T , F,		! periodic direction?
  bcz = 's','s','a','a2','c1:c2'
/
&hydro_init_pars
  inituu='gaussian-noise', ampluu=1e-2
/
&density_init_pars
  initlnrho='polytropic_simple', mpoly=1.0, cs0=0.2887, rho0=1.
/
&grav_init_pars
  grav_profile='const', gravz=-1.,
  zref=-0.10,
  z1=-1.10, z2=-0.10            ! for pvert.pro
/
&entropy_init_pars
  mpoly0=1.                     ! for pvert.pro
/

!                              -*-f90-*-     (for emacs)
!
! Convection in vertically stratified atmosphere
! Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.2 2005-06-26 17:34:28 eos_merger_tony Exp $',
  ip=15,			! debugging parameter
  xyz0  = 0.,    0., -1.10,	! first corner of box
  xyz1  = 2.596, 1., -0.10,	! second corner of box
  lperi = T , T , F,		! periodic direction?
  bcz = 's','s','a','a2','cT'
/
&hydro_init_pars
  inituu='gaussian-noise', ampluu=3e-4
/
&density_init_pars
  initlnrho='polytropic_simple', mpoly=1.0, cs0=0.2887, rho0=1.
/
&grav_init_pars
  grav_profile='const', gravz=-1.,
  zref=-0.10,
  z1=-1.10, z2=-0.10            ! for pvert.pro
/
&entropy_init_pars
  mpoly0=1.                     ! for pvert.pro
/

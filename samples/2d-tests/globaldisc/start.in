!                           -*-f90-*-     (for Emacs)
!
!  Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.31 2007-07-05 12:48:56 wlyra Exp $',
  ip=6,                        ! debugging parameter
  xyz0  = -2.6,-2.6,-0.26,       ! first corner of box
  xyz1  =  2.6, 2.6, 0.26,       ! second corner of box
  lperi = T  , T  , T,         ! periodic direction?
  !lshift_origin =  F,  F,  F,

  !bcx = 's','s','a','s'!,'s','s','a','s'
  !      velgas, densgas, veldust,densdust
  !bcy = 's','s','a','s'!,'s','s','a','s'

  r_int=0.4,                   ! radius of interior spherical boundary
  r_ext=2.5,                   ! radius of exterior spherical boundary
  lcylinder_in_a_box=T
  llocal_iso=T
  lcylindrical_gravity=T
/
&eos_init_pars
  cs0=0.05 
  rho0 = 1.
  ptlaw=1.
  gamma=1.
/
&hydro_init_pars
  inituu='global-shear'
/
&density_init_pars
  initlnrho='local-isothermal' 
  lnrho_const=0.  
  ldensity_nolog=T
  plaw=0.
/
&grav_init_pars
 ipotential='no-smooth'
 g0=1.
/
&special_init_pars
/
&particles_init_pars
  initxxp='random', initvvp='random'
/
&particles_nbody_init_pars
  initxxsp='fixed-cm'
  initvvsp='fixed-cm'
  GNewton=1.0
  pmass=1e-4, 1.
  position=-1., 0.
  r_smooth=0.03,0.0
  lcylindrical_gravity_nbody=T,T
/


#!/bin/csh
#$Id: restart-new-dir,v 1.2 2003-04-02 12:24:50 brandenb Exp $
#
#  Example:
#     restart-new-dir ../hydro256e

#  copies all files necessary for restarting into the
#  existing directory tree underneath $1

# to be done by hand:
#mkdir rot512_Om0b
#gt rot512_Om0b
#mkdatadir
#cd data
#mkproc-tree 128
#gb
#restart-new-dir ../rot512_Om0b

cp data/dim.dat $1/data
cp data/param* $1/data
copy-proc-to-proc grid.dat $1
copy-proc-to-proc seed.dat $1
copy-proc-to-proc dim.dat $1
#copy-proc-to-proc var.dat $1 #

!                           -*-f90-*-     (for Emacs)
!
!  Run parameters!
!
&run_pars
  cvsid='$Id: run.in,v 1.17 2006-03-31 03:08:36 wlyra Exp $',
  ip=14,
  nt=50, it1=5, isave=100, itorder=3, ialive=1
  cdt=0.4, 
  cdtv=0.8, 
  dtmin=1e-6,
  dsnap=6.283185, dvid=6.283185, d2davg=10. !slice at Tjup/20
  !ttransient=0.,
  !tavg = 10.,                   ! time constant for time averaging
  !random_gen='nr_f90',
  !slice_position='e'
  wfreeze_int = 1e-8
  wfreeze_ext = 1e-8
/
&eos_run_pars
rho0= 1. 
/
&hydro_run_pars
  wdamp=0. 
  lfreeze_uint=T,lfreeze_uext=T
/
&density_run_pars
  lupw_lnrho=T ! use upwinding for lnrho to avoid wiggles
               ! upwinding violates mass conservation!
  lfreeze_lnrhoint=T
  lfreeze_lnrhoext=T
  lnrho_int= 0. 
  lnrho_const=0.

  !ammount of hyper-diffusivity needed??? - similar to nu
  !diffrho_hyper3=1E-12, idiff='hyper3'
  !diffrho=1e-2
  !idiff='normal'
/
&grav_run_pars
  ipotential='smoothed-newton', 
  g0=1.,r0_pot=0.1,n_pot=2 
 /
&viscosity_run_pars
  ivisc='nu-const','nu-shock'
  nu=1e-5
  nu_shock=1.0
/
&particles_run_pars

/
&shock_run_pars
  lshock_first=T
  lshock_max5=T
/
&planet_run_pars
  gc=1e-4 
  lramp=T
  nc=2,b=0.03
  lwavedamp=T
  llocal_iso=T
  lcs2_global=T
  lmigrate=F
  lnorm=T
  !I can also set G=M_sun=1, but then sigma has to
  !scaled accordingly. As it is, I prefer to work with
  !sigma=1 and then scale G accordingly to have
  !Mdisk = Int(sigma*ds) = 2e-3 M_sun
  Gvalue = 0.000952381
/

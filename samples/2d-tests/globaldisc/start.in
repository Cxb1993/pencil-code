!                           -*-f90-*-     (for Emacs)
!
!  Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.7 2005-08-19 10:08:02 wlyra Exp $',
  ip=14,                        ! debugging parameter
  xyz0  = -4.,-4.,-4.,       ! first corner of box
  xyz1  =  4., 4., 4.,       ! second corner of box
  lperi =  F  , F  , T,         ! periodic direction?
  !lshift_origin =  F,  F,  F,

  bcx = 'a','s','s','a2'
  bcy = 's','a','s','a2'

  !bcz = 's','s','a','s:a2','s:a2'
  !random_gen='nr_f90',
  r_int=0.3,                    ! radius of interior spherical boundary
  r_ext=3.7,                   ! radius of exterior spherical boundary
  lcylindrical=T
/
&eos_init_pars
  cs0=0.05 ! 0.7 km/s at Jupiter's orbit. 
           ! in these units, Rj=1,Omega=1.,[v]~13km/s
  !rho0=1.,
/
&hydro_init_pars
  inituu='keplerian'
  !if corotational
  !Omega = 2.51588    !for jupiter 5.2 AU
  !Omega = 1 
  !lcentrifugal_force = T
/
&density_init_pars
  initlnrho='solar_nebula'
  lnrho_const=1
  wdamp=0.1
  plaw=0.5
  !gap=0.25
/
&grav_init_pars
  ipotential='smoothed-newton', g0=1.,r0_pot=0.1,n_pot=5 !10
  gc=0.001,b=0.07,nc=5,Rx=-1
  !!Rp = planet distance... 5.2 or 1
  !!gp is the mass of the planet, G*Mp
  !!GMjup = g0*0.001 ; Gpl   = 10*GMjup
  !![x]=1 UA and [u] = 1km/s lead to g0=GM=890
  !!using [x]= planet distance and [t]=1 orbit, g0=(2pi)**2 =39.48
  !now I'm using [x]=planet's distance, g0=1., so [t]=Omega-1 and
  !assuming r=5.2AU and Omega=2pi/11.8yr, [v]=13km/s
/

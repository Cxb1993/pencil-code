!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
! Convection in vertically stratified atmosphere/solar convection zone
! Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.4 2005-07-29 16:33:40 theine Exp $'

  unit_length=1e8               !
  unit_velocity=1e6             ! unit system (relative to cgs)
  unit_density=1e-7             !

  xyz0  = -3.0, -3.0, -2.5      ! first corner of box
  Lxyz  =  6.0,  6.0,  3.5      ! box size
  lperi =  T ,   T ,   F        ! periodic direction?
  bcz = 's','s','a','a2','a2'   ! boundary conditions

  lwrite_aux=T                  ! write out auxiliary variables
  ip=14                         ! debugging parameter
/

&eos_init_pars
  yMetals=1e-4                       ! fixed electron contribution by metals
/

&hydro_init_pars
/

&density_init_pars
/

&grav_init_pars
  lnrho_bot=5.6                      ! density at bottom
  gravz_profile='const', gravz=-2.75 ! constant gravity in the z-direction
/

&entropy_init_pars
  ss_const=0.00168                   ! constant entropy
  initss='hydrostatic-isentropic'    ! determines initial density profile
/

&radiation_init_pars
  radx=0,rady=0,radz=1,rad2max=1     ! use only vertical rays
  bc_rad='0:0','0:0','S:0'           ! incoming intensity at boundaries
/


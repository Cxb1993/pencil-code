#!/bin/csh
#$Id: copy-VARN-to-var,v 1.2 2002-11-14 16:31:42 brandenb Exp $
#
#  Example:
#     copy-VAR-to-var 40 ../hydro256e
#  will copy all VAR5 files to var.dat in each proc directory.
#  Used for restarting.

set procdirs  =  `ls data | grep proc `
foreach proc ($procdirs)
  echo "cp data/$proc/VAR$1 $2/data/$proc/var.dat"
  cp data/$proc/VAR$1 $2/data/$proc/var.dat
  #ls -lt data/$proc/VAR$1 data/$proc/var.dat
  #cp data/$proc/VAR$1 data/$proc/var.dat
end

#!/bin/csh
#$Id: cvsci_run2,v 1.6 2003-02-24 13:23:50 nilshau Exp $
#
#  This script adds a new run to the repository
#  and checks in all *.in files as well as material
#  from the data and src directories.

cvs add $1
cd $1
set CWD=$cwd
cvs add data src *.in k.dat
cd src
cvs add *.local
cd ..
cd data
#set files  =  `ls | grep dat `
#if ($status == 0) cvs add  $files
#cvs add n.dat index.pro dim.dat *pro
cvs add time_series.dat index.pro dim.dat legend.dat params.log power*.dat
if (-e new_from.dir) then
    cvs add new_from.dir
endif
if (-e remeshed_from.dir) then
    cvs add remeshed_from.dir
endif
cd $CWD
cvs ci -m "added new run: `uname -a`"

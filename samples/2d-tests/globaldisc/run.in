!                           -*-f90-*-     (for Emacs)
!
!  Run parameters
!
&run_pars
  cvsid='$Id: run.in,v 1.12 2005-11-15 01:06:21 wlyra Exp $',
  ip=13,
  nt=500000, it1=50, isave=50, itorder=3, ialive=1
  cdt=0.4, 
  !dt=3.5e-3 
  !dt=2.85E-03
  cdtv=0.8, 
  dtmin=1e-6,
  dsnap=6.283185, dvid=6.283185, d2davg=10. !slice at Tjup/20
  !ttransient=0.,
  !tavg = 10.,                   ! time constant for time averaging
  !random_gen='nr_f90',
  !slice_position='e'
  wfreezeint = 1e-8
  wfreezeext = 1e-8
/
&eos_run_pars
rho0= 1. !1.23 !exp(lnrho_const)
/
&hydro_run_pars
  wdamp=0. !0.1
  !Omega = 2.51588  !for jupiter at 5.2 AU if [x]=1AU
  !Omega = 1.        !r = 1, g0 = 1
  lcalc_turbulence_pars=T
  lfreeze_uint=F,lfreeze_uext=T
/
&density_run_pars
  lupw_lnrho=T 
  lfreeze_lnrhoint=F
  lfreeze_lnrhoext=T
  lnrho_const=0. 
  plaw=0. 
  !ammount of hyper-diffusivity needed??? - similar to nu
  !diffrho_hyper3=1E-11, idiff='hyper3'
/
&grav_run_pars
  ipotential='smoothed-newton', 
  g0=1.,r0_pot=0.4,n_pot=2 
  !lsmooth_local=T
 /
&viscosity_run_pars
  ivisc='nu-const','nu-shock'
  nu=1e-5
  nu_shock=1.0
/
&shock_run_pars
  lshock_first=T
  lshock_max5=T
/
&planet_run_pars
  Rx=-1,Ry=0,Rz=0
  gc=1e-3 !for gc=0, gravity_companion is not called
  lramp=T
  nc=2,b=0.07
  lwavedamp=F
  llocal_iso=T
/

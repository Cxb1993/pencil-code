!                           -*-f90-*-     (for Emacs)
!
!  Run parameters
!
&run_pars
  cvsid='$Id: run.in,v 1.8 2005-08-22 17:58:11 wlyra Exp $',
  ip=13,
  nt=30000, it1=20, isave=10, itorder=3, ialive=1
  cdt=0.4, cdtv=0.3, dtmin=1e-6,
  dsnap=0.3, dvid=0.3, d2davg=10. !slice at Tjup/20
  !ttransient=0.,
  !tavg = 10.,                   ! time constant for time averaging
  !random_gen='nr_f90',
  !slice_position='e'
  wfreeze = 0.05
/
&eos_run_pars
llocal_iso=T
/
&hydro_run_pars
  wdamp=0.1
  !Omega = 2.51588  !for jupiter at 5.2 AU if [x]=1AU
  !Omega = 1.        !r = 1, g0 = 1
  lcalc_turbulence_pars=T
  lfreeze_uint=T,lfreeze_uext=T
/
&density_run_pars
  lupw_lnrho=T ! use upwinding for lnrho to avoid wiggles
  lfreeze_lnrhoint=F
  lfreeze_lnrhoext=T
/
&grav_run_pars
  ipotential='smoothed-newton', 
  g0=1.,r0_pot=0.1,n_pot=5 !10!star
  lcompanion=T
  gc=0.001,nc=5,b=0.07 !planet

  !!for corotational
  Rx=-1

  !!for inertial
  !!Rc=5.2,phase=3.141592,
  !!Omega_inertial=2.51588

  !!What really decides if the run is corotational
  !!or inertial is Omega (the one from Hydro)
  !!These values (Rc, phase and Omega_inertial) can 
  !!be calculated from g0, Rx and Ry. But I put then
  !!in the runlist to avoid re-calculating them at 
  !!every time-step
/
&viscosity_run_pars
  ivisc='alpha-recipe','nu-shock'
  nu=1e-3
  nu_shock=1.0
/
&shock_run_pars
  lshock_first=T
  lshock_max5=T
/

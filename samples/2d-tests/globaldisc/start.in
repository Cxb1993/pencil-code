!                           -*-f90-*-     (for Emacs)
!
!  Initialisation parameters
!
&init_pars
  cvsid='$Id: start.in,v 1.10 2005-10-19 18:37:07 wlyra Exp $',
  ip=14,                        ! debugging parameter
  xyz0  = -2.5,-2.5,-2.5,       ! first corner of box
  xyz1  =  2.5, 2.5, 2.5,       ! second corner of box
  lperi =  F  , F  , T,         ! periodic direction?
  !lshift_origin =  F,  F,  F,

  bcx = 'a','s','s','a2'
  bcy = 's','a','s','a2'

  !bcz = 's','s','a','s:a2','s:a2'
  !random_gen='nr_f90',
  r_int=0.5,                    ! radius of interior spherical boundary
  r_ext=2.1,                   ! radius of exterior spherical boundary
  lcylindrical=T
/
&eos_init_pars
  cs0=0.05 ! 0.7 km/s at Jupiter's orbit. 
           ! in these units, Rj=1,Omega=1.,[v]~13km/s
  !rho0=1.,
  llocal_iso = T
  rho0 = 1. !exp(0.21)
/
&hydro_init_pars
  inituu='keplerian'
  !if corotational
  !Omega = 2.51588    !for jupiter 5.2 AU
  !Omega = 1. 
  !lcentrifugal_force = T
/
&density_init_pars
  initlnrho='zero'
  !lnrho_const=0.21
  !wdamp=0.1
  !plaw=0.5
  !gap=0.25
/
&grav_init_pars
  ipotential='smoothed-newton', g0=1.,r0_pot=0.3,n_pot=-1 !10
  lcompanion=T
  gc=0.0001,b=0.07,nc=2,Rx=-1.0 !,ecc=0.5
 
  !!Rp = planet distance... 5.2 or 1
  !!gp is the mass of the planet, G*Mp
  !!GMjup = g0*0.001 ; Gpl   = 10*GMjup
  !![x]=1 UA and [u] = 1km/s lead to g0=GM=890
  !!using [x]= planet distance and [t]=1 orbit, g0=(2pi)**2 =39.48
  !now I'm using [x]=planet's distance, g0=1., so [t]=Omega-1 and
  !assuming r=5.2AU and Omega=2pi/11.8yr, [v]=13km/s
/

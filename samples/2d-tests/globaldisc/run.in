!                           -*-f90-*-     (for Emacs)
!
!  Run parameters!
!
&run_pars
  cvsid='$Id: run.in,v 1.27 2006-09-08 11:05:47 wlyra Exp $',
  ip=14,
  nt=50, it1=5, isave=100, itorder=3, ialive=1
  cdt=0.4, 
  cdtv=0.8, 
  dtmin=1e-6,
  dsnap=6.283185, dvid=6.283185, d2davg=10. 
  !ttransient=0.,
  !tavg = 10.,                   ! time constant for time averaging
  !random_gen='nr_f90',
  !slice_position='e'
  wfreeze_int = 1e-8
  wfreeze_ext = 1e-8
  wborder_int=0.05
  wborder_ext=0.2
/
&eos_run_pars
rho0= 1. 
/
&hydro_run_pars
  wdamp=0. 
  lfreeze_uint=T,lfreeze_uext=T
  borderuu='globaldisk'
/
&density_run_pars
  lupw_lnrho=T ! use upwinding for lnrho to avoid wiggles
               ! upwinding violates mass conservation!
  lfreeze_lnrhoint=T
  lfreeze_lnrhoext=T
  lnrho_int= 0. 
  lnrho_const=0.
  diffrho_hyper3=5E-11, idiff='hyper3'
  borderlnrho='constant'
/
&viscosity_run_pars
  ivisc='nu-const','nu-shock'
  nu=1e-5
  nu_shock=1.0
/
&particles_run_pars
  ldragforce_dust_par=F
/
&particles_nbody_run_pars
  lnogravz_star=T
/
&shock_run_pars
  lshock_first=T
  lshock_max5=T
/
&planet_run_pars
  gc=1e-4 
  lramp=F
  nc=2,b_pot=0.03
  llocal_iso=T
/

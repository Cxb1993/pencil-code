!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
! Convection in vertically stratified atmosphere/solar convection zone
! Initialisation parameters for a MLT stratification
!
&init_pars
  cvsid='$Id: start.in,v 1.1.1.1 2006-05-04 14:41:33 dintrans Exp $',
  ip=14,                         ! debugging parameter
  lwrite_ic = T,                 ! write the initial setup in VAR0
  xyz0  = -2., -0.5, -2.,        ! first corner of box
  xyz1  =  2.,  0.5,  1.2,       ! second corner of box
  lperi =  T ,   T ,   F,        ! periodic direction?
  bcz   = 's','s','a','a2','c1:cT'
/
&eos_init_pars
  !cs0=0.57735, rho0=1.
/
&hydro_init_pars
  inituu='gaussian-noise', ampluu=3e-4
/
&density_init_pars
/
&grav_init_pars
  gravz_profile='const', gravz=-1.,
  z1=0., z2=1., zref=1.2
/
&entropy_init_pars
  initss='mixinglength', widthss=0.05, mixinglength_flux=1e-2,
  mpoly0=0., mpoly1=3., mpoly2=-0.9,
  cs2cool=0.3333333,
  ampl_ss=-0.5, radius_ss=0.2
/

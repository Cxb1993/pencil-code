#!/bin/csh
#$Id: copy-VARN-to-var,v 1.1 2002-11-04 05:37:08 brandenb Exp $
#
#  Example:
#     copy-VAR-to-var 5
#  will copy all VAR5 files to var.dat in each proc directory.
#  Used for restarting.

set procdirs  =  `ls data | grep proc `
foreach proc ($procdirs)
  echo "cp data/$proc/VAR$1 data/$proc/var.dat"
  ls -lt data/$proc/VAR$1 data/$proc/var.dat
  cp data/$proc/VAR$1 data/$proc/var.dat
end
